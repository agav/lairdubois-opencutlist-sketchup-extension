{% extends 'core/_modal.twig' %}

{% set id = 'ladb_cutlist_modal_export' %}
{% set title = 'tab.cutlist.export.title'|i18next %}

{% block headerInner %}
    {{ parent() }}
    <ul class="nav nav-tabs nav-justified" role="tablist">
        <li role="presentation"{% if exportTab == 'csv' %} class="active"{% endif %}><a href="#tab_export_csv" role="tab" data-toggle="tab">CSV</a></li>
        <li role="presentation"{% if exportTab == 'json' %} class="active"{% endif %}><a href="#tab_export_json" role="tab" data-toggle="tab">JSON</a></li>
    </ul>
{% endblock %}


{% block bodyInner %}

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane{% if exportTab == 'csv' %} active{% endif %}" id="tab_export_csv">

            {{ 'tab.cutlist.export.info_csv'|i18next }}
            <hr>
            <h4 class="text-center">{{ 'tab.cutlist.export.options'|i18next }}</h4>
            <div class="form form-horizontal">
                <div class="form-group">
                    <label for="ladb_cutlist_export_select_source"
                           class="control-label col-xs-4">{{ 'tab.cutlist.export.option_source'|i18next }}</label>
                    <div class="col-xs-6">
                        <select class="form-control" id="ladb_cutlist_export_select_source">
                            <option value="0" data-content="{{ 'tab.cutlist.export.option_source_summary'|i18next }}">
                                0
                            </option>
                            <option value="1" data-content="{{ 'tab.cutlist.export.option_source_cutlist'|i18next }}">
                                1
                            </option>
                            <option value="2"
                                    data-content="{{ 'tab.cutlist.export.option_source_instances_list'|i18next }}">2
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ladb_cutlist_export_select_col_sep"
                           class="control-label col-xs-4">{{ 'tab.cutlist.export.option_col_sep'|i18next }}</label>
                    <div class="col-xs-6">
                        <select class="form-control" id="ladb_cutlist_export_select_col_sep">
                            <option value="0" data-content="{{ 'tab.cutlist.export.option_col_sep_tab'|i18next }}">0
                            </option>
                            <option value="1" data-content="{{ 'tab.cutlist.export.option_col_sep_comma'|i18next }}">1
                            </option>
                            <option value="2"
                                    data-content="{{ 'tab.cutlist.export.option_col_sep_semicolon'|i18next }}">2
                            </option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ladb_cutlist_export_select_encoding"
                           class="control-label col-xs-4">{{ 'tab.cutlist.export.option_encoding'|i18next }}</label>
                    <div class="col-xs-6">
                        <select class="form-control" id="ladb_cutlist_export_select_encoding">
                            <option value="0" data-content="UTF-8">0</option>
                            <option value="1" data-content="UTF-16LE">1</option>
                            <option value="2" data-content="UTF-16BE">2</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane{% if exportTab == 'json' %} active{% endif %}" id="tab_export_json">
            {{ 'tab.cutlist.export.info_json'|i18next }}
        </div>
    </div>
{% endblock %}

{% block footerInner %}
    <button type="button" class="btn btn-default pull-left" id="ladb_cutlist_export_btn_defaults_reset"><i class="ladb-opencutlist-icon-reset"></i> {{ 'default.reset_to_app_defaults'|i18next }}</button>
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'default.cancel'|i18next }}</button>
    <button type="button" class="btn btn-primary" id="ladb_cutlist_export_btn_export">{{ 'default.export'|i18next }}</button>
{% endblock %}